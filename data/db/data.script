CREATE MEMORY TABLE ITEMS_PEDIDO(CODIGO BIGINT NOT NULL PRIMARY KEY,QUANTIDADE INTEGER,ID_PEDIDO BIGINT,ID_PRATO BIGINT,CONSTRAINT FK_ITEMS_PEDIDO_ID_PRATO FOREIGN KEY(ID_PRATO) REFERENCES PRATOS(CODIGO),CONSTRAINT FK_ITEMS_PEDIDO_ID_PEDIDO FOREIGN KEY(ID_PEDIDO) REFERENCES PEDIDOS(CODIGO))
CREATE MEMORY TABLE PEDIDO(CODIGO INTEGER NOT NULL PRIMARY KEY,CLIENTE VARCHAR(255))
CREATE MEMORY TABLE ITEM(CODIGO INTEGER NOT NULL PRIMARY KEY,QUANTIDADE INTEGER,VALOR REAL,COD_PEDIDO INTEGER,COD_PRODUTO INTEGER,CONSTRAINT FK_ITEM_COD_PEDIDO FOREIGN KEY(COD_PEDIDO) REFERENCES PEDIDO(CODIGO))
CREATE MEMORY TABLE PRODUTO(CODIGO INTEGER NOT NULL PRIMARY KEY,DESCRICAO VARCHAR(255))
ALTER TABLE ITEM ADD CONSTRAINT FK_ITEM_COD_PRODUTO FOREIGN KEY(COD_PRODUTO) REFERENCES PRODUTO(CODIGO)
