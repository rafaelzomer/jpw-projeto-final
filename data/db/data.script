CREATE MEMORY TABLE PEDIDOS(CODIGO BIGINT NOT NULL PRIMARY KEY)
CREATE MEMORY TABLE PRATOS(CODIGO BIGINT NOT NULL PRIMARY KEY,NOME VARCHAR(255))
